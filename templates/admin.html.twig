<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>eCommerce - {% block title %}{% endblock %}</title>
        <link href="{{ asset('css/bootstrap-5.1.3.min.css') }}" rel="stylesheet">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="{{ asset('js/bs-popperjs-2.9.2.min.js') }}"></script>
            <script src="{{ asset('js/bs-5.0.2.min.js') }}"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="row">
            <div class="col-2 pt-5 bg-secondary" style="height: 100vh">
                {{ include('layouts/navbar.admin.html.twig') }}
            </div>
            <div class="col">
                <main>
                    {% block body %}{% endblock %}
                </main>
            </div>
        </div>

        {% block script %}{% endblock %}
    </body>
</html>
