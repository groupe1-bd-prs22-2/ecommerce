{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>{{ 'user.infoperso'|trans }}</h4>
                        <div class="breadcrumb__links">
                            <a href="{{ path('app_home') }}">{{ 'navbar.home'|trans }}</a>
                            <span>{{ 'user.infoperso'|trans }}</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <br>
    <section class="contact_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container " >
                        <div class="section-title">
                            <span>{{ 'user.infoperso'|trans }}</span>
                        </div>
                        <center>
                            <div>
                                {{ 'user.firstname'|trans }} : {{ app.user.firstname }}
                            </div>
                            <div>
                                {{ 'user.lastname'|trans }} : {{ app.user.lastname }}
                            </div>
                            <div>
                                {{ 'user.email'|trans }} : {{ app.user.email }}
                            </div>
                        </center>
                        <br>
                        <center>
                            <div class="row-2">
                                <button class="site-btn">
                                    <a style=" color: #FFFFFF" href="{{ path('user_edit') }}">{{ 'user.editinfo'|trans }}</a>
                                </button>
                                <button class="site-btn">
                                    <a style=" color: #FFFFFF" href="{{ path('user_edit_pass') }}">{{ 'user.editpass'|trans }}</a>
                                </button>
                            </div>
                        </center>
                        <br>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="heading_container">
                        <h2>{{ 'commande.history'|trans }}</h2>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{{ 'order.reference'|trans }} </th>
                            <th>{{ 'order.status'|trans }}</th>
                            <th>{{ 'commande.date'|trans }}</th>
                            <th>{{ 'order.amount'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for order in orders %}
                                <tr>
                                    <td>{{ order.reference }}</td>
                                    <td>{{ ('orders.status.' ~ order.status)|trans }} </td>
                                    <td>{{ order.createdAt | date('d/m/y H:i') }}</td>
                                    <td>{{ order.totalAmount }} â‚¬
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
