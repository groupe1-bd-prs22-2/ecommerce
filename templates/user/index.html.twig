{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <section class="contact_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <div class="heading_container">
                            <h2>
                                Mes informations personnels
                            </h2>
                        </div>

                        <div>
                            {{ app.user.firstname }}
                        </div>
                        <div>
                            {{ app.user.lastname }}
                        </div>
                        <div>
                            {{ app.user.email }}
                        </div>
                        <div>

                        </div>
                        <div class="d-flex">
                            <div class="row-2">
                                <button class="px-1">
                                    <a style=" color: #FFFFFF" href="{{ path('user_edit') }}">Modifier ses informations</a>
                                </button>
                                <button>
                                    <a style=" color: #FFFFFF" href="{{ path('app_logout') }}">Déconnexion</a>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="heading_container">
                        <h2>Historique de mes commandes</h2>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Nom </th>
                            <th>Quantités</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>

                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
