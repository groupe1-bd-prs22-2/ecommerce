{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <section class="contact_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="form_container">
                        <div class="section-title">
                            <span>Mes informations personnels</span>
                            <h2>Contact Us</h2>
                            <p>As you might expect of a company that began as a high-end interiors contractor, we pay
                                strict attention.</p>
                        </div>
                        <ul>
                            <li>
                                <h4>America</h4>
                                <p>195 E Parker Square Dr, Parker, CO 801 <br />+43 982-314-0958</p>
                            </li>
                            <li>
                                <h4>France</h4>
                                <p>109 Avenue Léon, 63 Clermont-Ferrand <br />+12 345-423-9893</p>
                            </li>
                        </ul>
                        <div class="heading_container">
                            <h2>
                                Mes informations personnels
                            </h2>
                        </div>

                        <div>
                            {{ app.user.firstname }}
                        </div>
                        <div>
                            {{ app.user.lastname }}
                        </div>
                        <div>
                            {{ app.user.email }}
                        </div>
                        <div>

                        </div>
                        <div class="d-flex">
                            <div class="row-2">
                                <button class="px-1 site-btn">
                                    <a style=" color: #FFFFFF" href="{{ path('user_edit') }}">{{ 'user.editinfo'|trans }}</a>
                                </button>
                                <button class="site-btn">
                                    <a style=" color: #FFFFFF" href="{{ path('app_logout') }}">{{ 'navbar.logout'|trans }}</a>
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="heading_container">
                        <h2>{{ 'order.reference'|trans }}</h2>
                    </div>
                    <table class="table">
                        <thead>
                        <tr>
                            <th>{{ 'commande.name'|trans }} </th>
                            <th>{{ 'commande.quantity'|trans }}</th>
                            <th>{{ 'commande.date'|trans }}</th>
                            <th>{{ 'commande.price'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for order in orders %}
                            <tr>
                                <td>{{ order.reference }}</td>
                                <td>{{ order.status }} </td>
                                <td>{{ order.createdAt | date('d/m/y H:i') }}</td>
                                <td>{{ order.totalAmount }} €
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
