{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__text">
                        <div class="section-title">
                            <span>Information</span>
                            <h2>Nous contacter :</h2>
                            <p>Quoi de mieux que des experts pour faire une exp√©rtise.</p>
                        </div>
                        <ul>
                            <li>
                                <h4>France</h4>
                                <p>25 Rue Claude Tillier, 75012 Paris <br />+33 9 00 00 00 00</p>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                        {{ form_start(form) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.sujet) }}
                            {{ form_row(form.message) }}
                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="submit" class="site-btn">{{ button_label|default('save')|trans }}</button>
                                </div>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
