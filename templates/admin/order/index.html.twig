{% extends 'admin.html.twig' %}

{% block title %}{{ 'orders.list'|trans }}{% endblock %}

{% block body %}
    <div class="container my-3">
        <h1>{{ 'orders.list'|trans }}</h1>

        {# total items count #}
        <div class="count">
            {{ 'orders.total' | trans }} : {{ pagination.getTotalItemCount }}
        </div>
        <table>
            <tr>
                {# sorting of properties based on query components #}
                <th>{{ knp_pagination_sortable(pagination, 'Numéro de commande', 'a.id') }}</th>
                <th{% if pagination.isSorted('a.status') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'État', 'a.status') }}
                </th>
                <th{% if pagination.isSorted('a.createdAt') %} class="sorted"{% endif %}>
                    {{ knp_pagination_sortable(pagination, 'Date d\'achat', 'a.createdAt') }}
                </th>
                <th>{{ knp_pagination_sortable(pagination, 'Montant', null) }}</th>
                <th>Actions</th>
            </tr>

            {# table body #}
            {% for order in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>{{ order.id }}</td>
                    <td>{{ ('orders.status.' ~ order.status) | trans }}</td>
                    <td>{{ order.createdAt | date('d/m/Y H:i:s') }}</td>
                    <td>{{ order.totalAmount }} €</td>
                    <td class="d-flex gap-2">
                        <form method="post" action="#">
                            <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ order.id) }}">
                            <button class="btn btn-danger btn-sm">{{ 'orders.cancel'|trans }}</button>
                        </form>
                        <form method="post" action="#">
                            <input type="hidden" name="_token" value="{{ csrf_token('cancel' ~ order.id) }}">
                            <button class="btn btn-success btn-sm">{{ 'orders.validate'|trans }}</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </table>
        {# display navigation #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}

