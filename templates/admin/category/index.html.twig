{% extends 'base.html.twig' %}

{% block title %}{{ 'category.list'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>{{ 'category.list'|trans }}</h1>

        <a href="{{ path('admin_category_new') }}" class="btn btn-success btn-sm my-3 float-end">{{ 'category.create'|trans }}</a>

        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th>{{ 'category.name'|trans }}</th>
                    <th>{{ 'category.createdAt'|trans }}</th>
                    <th>{{ 'actions' }}</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.createdAt ? category.createdAt|date('d/m/Y H:i') : '' }}</td>
                        <td>
                            <div class="d-flex gap-3">
                                <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-primary btn-sm">
                                    {{ 'category.edit'|trans }}
                                </a>
                                {{ include('admin/category/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">{{ 'category.empty'|trans }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
