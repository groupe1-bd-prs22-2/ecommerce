{% extends 'admin.html.twig' %}

{% block title %}{{ 'article.list'|trans }}{% endblock %}

{% block body %}
    <div class="container my-3">
        <h1>{{ 'article.list'|trans }}</h1>

        <a href="{{ path('admin_article_new') }}" class="btn btn-success btn-sm float-end my-3">
            {{ 'article.create'|trans }}
        </a>

        <table class="table table-sm table-hover">
            <thead>
                <tr>
                    <th>{{ 'article.title'|trans }}</th>
                    <th>{{ 'article.content'|trans }}</th>
                    <th>{{ 'article.createdAt'|trans }}</th>
                    <th>{{ 'article.updatedAt'|trans }}</th>
                    <th>{{ 'article.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                    <td>{{ article.content }}</td>
                    <td>{{ article.createdAt ? article.createdAt|date('d/m/Y H:i:s') : '' }}</td>
                    <td>{{ article.updatedAt ? article.updatedAt|date('d/m/Y H:i:s') : '' }}</td>
                    <td>
                        <div class="d-flex gap-3">
                            <a href="{{ path('admin_article_edit', {'id': article.id}) }}" class="btn btn-primary btn-sm">
                                {{ 'article.edit'|trans }}
                            </a>
                            {{ include('admin/article/_delete_form.html.twig') }}
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">{{ 'article.empty'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
