{% extends 'base.html.twig' %}

{% block title %}{{ page.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ page.title }}</h1>
        <span class="text-muted" style="font-size: small">
            {{ 'page.createdAt'|trans({
                'date': page.createdAt|date('d/m/Y'),
                'hour': page.createdAt|date('H:i')
            }) }}
            {{ 'page.publishedBy'|trans({'publisher': 'Administrateur'}) }}
        </span>

        <div class="mt-5">{{ page.content|raw }}</div>
    </div>
{% endblock %}
